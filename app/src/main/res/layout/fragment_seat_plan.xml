<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/classroom_background">

    <!-- Control Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="2dp">

        <Button
            android:id="@+id/config_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Configure Layout"
            android:textSize="12sp"
            android:background="@color/primary_color"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Clear Selection"
            android:textSize="12sp"
            android:background="@color/secondary_color"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Scrollable Classroom Layout with Blackboard -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/seat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

        </HorizontalScrollView>

    </ScrollView>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap student to select, tap empty seat to assign. Long press for more options. Tap teacher's desk for classroom actions."
        android:textSize="12sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="#f8f8f8"
        android:elevation="1dp" />

</LinearLayout>